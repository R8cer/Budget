    <script>
      function handleBudgetFormSubmit() {
        // Collect the budget form data
        const health_care = parseFloat(document.getElementById('health_care').value) || 0;
        const dental = parseFloat(document.getElementById('dental').value) || 0;
        const eye = parseFloat(document.getElementById('eye').value) || 0;
        const fsa = parseFloat(document.getElementById('fsa').value) || 0;
        const hsa = parseFloat(document.getElementById('hsa').value) || 0;
        const pre_tax_retirement = parseFloat(document.getElementById('pre_tax_retirement').value) || 0;
        const pre_tax_others = parseFloat(document.getElementById('pre_tax_others').value) || 0;
        const post_tax_others = parseFloat(document.getElementById('post_tax_others').value) || 0;
        const rent_mortgage = parseFloat(document.getElementById('rent_mortgage').value) || 0;
        const rent_mortgage_insurance = parseFloat(document.getElementById('rent_mortgage_insurance').value) || 0;
        const hoa = parseFloat(document.getElementById('hoa').value) || 0;
        const electric = parseFloat(document.getElementById('electric').value) || 0;
        const water_sewer = parseFloat(document.getElementById('water_sewer').value) || 0;
        const gas_heating = parseFloat(document.getElementById('gas_heating').value) || 0;
        const trash_recycling = parseFloat(document.getElementById('trash_recycling').value) || 0;
        const car_payment = parseFloat(document.getElementById('car_payment').value) || 0;
        const gas_or_public_transportation = parseFloat(document.getElementById('gas_or_public_transportation').value) || 0;
        const vehicle_maintenance = parseFloat(document.getElementById('vehicle_maintenance').value) || 0;
        const car_insurance = parseFloat(document.getElementById('car_insurance').value) || 0;
        const student_loans = parseFloat(document.getElementById('student_loans').value) || 0;
        const personal_loans = parseFloat(document.getElementById('personal_loans').value) || 0;
        const credit_card_payments = parseFloat(document.getElementById('credit_card_payments').value) || 0;
        const other_loan_obligations = parseFloat(document.getElementById('other_loan_obligations').value) || 0;
        const phone_bill = parseFloat(document.getElementById('phone_bill').value) || 0;
        const phone_payment = parseFloat(document.getElementById('phone_payment').value) || 0;
        const Internet = parseFloat(document.getElementById('Internet').value) || 0;
        const groceries = parseFloat(document.getElementById('groceries').value) || 0;
        const medical_expenses = parseFloat(document.getElementById('medical_expenses').value) || 0;
        const pet_care = parseFloat(document.getElementById('pet_care').value) || 0;
        const household_supplies = parseFloat(document.getElementById('household_supplies').value) || 0;
        const others_essentials = parseFloat(document.getElementById('others_essentials').value) || 0;
        const dining_out = parseFloat(document.getElementById('dining_out').value) || 0;
        const movies_events_outings = parseFloat(document.getElementById('movies_events_outings').value) || 0;
        const subscriptions = parseFloat(document.getElementById('subscriptions').value) || 0;
        const hobbies = parseFloat(document.getElementById('hobbies').value) || 0;
        const other_discretionary = parseFloat(document.getElementById('other_discretionary').value) || 0;
        const other_income = parseFloat(document.getElementById('other_income').value) || 0;
        const investments = parseFloat(document.getElementById('investments').value) || 0;

        // Calculate the total expenses
        const totalExpense = health_care + dental + eye + fsa + hsa + pre_tax_retirement + pre_tax_others + post_tax_others
          + rent_mortgage + rent_mortgage_insurance + hoa + electric + water_sewer + gas_heating + trash_recycling
          + car_payment + gas_or_public_transportation + vehicle_maintenance + car_insurance + student_loans + personal_loans
          + credit_card_payments + other_loan_obligations + phone_bill + phone_payment + Internet + groceries + medical_expenses
          + pet_care + household_supplies + others_essentials + dining_out + movies_events_outings + subscriptions + hobbies
          + other_discretionary;

        // Display the total expense
        document.getElementById('totalExpense').innerText = `$${totalExpense.toFixed(2)}`;

        // Get data from Page 1 (Income and State)
        const income = localStorage.getItem('income');
        const state = localStorage.getItem('state');

        console.log(`Income: $${income}`);
        console.log(`State: ${state}`);
      }

      // Optionally, display data from Page 1 on Page 2 when the page loads
      window.onload = function() {
        const income = localStorage.getItem('income');
        const state = localStorage.getItem('state');

        console.log(`You selected income of $${income} in ${state}`);
      }
    </script>
